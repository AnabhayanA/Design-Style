# write files
os.makedirs(out_dir, exist_ok=True)
with open(os.path.join(out_dir, "index.html"), "w", encoding="utf-8") as f:
    f.write(html_index)
with open(os.path.join(out_dir, "about.html"), "w", encoding="utf-8") as f:
    f.write(html_about)
with open(os.path.join(out_dir, "examples.html"), "w", encoding="utf-8") as f:
    f.write(html_examples)
with open(os.path.join(out_dir, "style.css"), "w", encoding="utf-8") as f:
    f.write(css)

# create zip for download
zip_path = "/mnt/data/Design-Style-docs.zip"
with zipfile.ZipFile(zip_path, "w", compression=zipfile.ZIP_DEFLATED) as zf:
    # add all created files
    for root, dirs, files in os.walk(out_dir):
        for file in files:
            full = os.path.join(root, file)
            arc = os.path.relpath(full, out_dir)
            zf.write(full, arc)

# list files created
created = []
for root, dirs, files in os.walk(out_dir):
    for file in files:
        created.append(os.path.join(root, file))

{"created_files": created, "zip": zip_path}
